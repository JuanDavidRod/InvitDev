---
const dataSections = [
  {
    title: "Ceremonia",
    sections: [
      {
        title: "Día",
        subtitle: "Viernes 10 de Octubre - 17hs",
        textButton: "Guardar Fecha",
      },
      {
        title: "Lugar",
        subtitle: "Parroquia Nuestra Señora",
        textButton: "Confirmar Asistencia",
      },
      {
        title: "Dirección",
        subtitle: "Av. Pergamino 203 – San José",
        textButton: "¿Cómo llegar?",
      },
    ],
  },
  {
    title: "Celebración",
    sections: [
      {
        title: "Día",
        subtitle: "Viernes 10 de Octubre – 20hs",
        textButton: "Guardar Fecha",
      },
      {
        title: "Lugar",
        subtitle: "Salon de fiestas ExcluEvent",
        textButton: "Confirmar Asistencia",
      },
      {
        title: "Dirección",
        subtitle: "Av. Los Reartes 12 – San José",
        textButton: "¿Cómo llegar?",
      },
    ],
  },
];
---

<section>
  {
    dataSections.map((infoSection) => {
      return (
        <div class="data_section">
          <h1>{infoSection.title}</h1>
          {infoSection.sections.map((section) => {
            return (
              <div class="info">
                <h4>{section.title}</h4>
                <span>{section.subtitle}</span>
                <button>{section.textButton}</button>
              </div>
            );
          })}
        </div>
      );
    })
  }
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    gap: 50px;
  }

  .data_section {
    display: flex;
    flex-direction: column;
    align-items: center;

    .info {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
      margin-bottom: 35px;
      width: 60%;
    }
  }

  h1 {
    width: 80%;
    margin: 0;
    padding-bottom: 20px;
    font-size: 45px;
    line-height: 50px;
    text-align: center;
    border-bottom: 2px solid var(--color-complementary);
    background: linear-gradient(
      to right,
      var(--color-terceary) 30%,
      var(--color-primary) 80%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  h4 {
    margin: 0;
    font-size: 25px;
    color: var(--color-primary);
  }

  span {
    font-size: 20px;
    color: var(--color-terceary);
  }
  button {
    width: 100%;
    border: none;
    background: var(--color-secondary);
    color: #fff;
    border-radius: 50px;
    line-height: 15px;
    font-size: 17px;
    padding: 18px 30px;
    box-shadow: 0px 0px 5px -1px rgba(0, 0, 0, 0.4);
    transition: all 0.5s 0s ease;
  }
</style>
